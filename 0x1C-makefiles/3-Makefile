# Compiler to be used
CC = gcc

# Name of the executable
NAME = school

# Source files
SRC = main.c file1.c file2.c

# Object files
OBJ = $(SRC:.c=.o)

# Program to delete files
RM = rm -f

# Default rule
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) -o $@ $^

# compile sourse files
%.o: %.c
	$(CC) -c -o $@ $<

# Clean Emacs and Vim temporary files and the executable
clean:
	$(RM) *~ $(NAME)

# Clean object files
oclean:
	$(RM) $(OBJ)

# Clean Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean

# Force recompilation of all source files
re: fclean all

# Build the executable only with updated source files
$(NAME): $(OBJ)
	$(CC) -o $@ $^

# Do not treat the list of .o files as a variable
.PHONY: all clean oclean fclean re
